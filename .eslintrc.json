{
    "parser": "babel-eslint",
    "parserOptions": {  
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "standard"
    ],
    "plugins": [
        "import",
        "node",
        "promise",
        "vue",
        "html"
    ],
    "root": true,
    "globals": {
        "document": false,
        "navigator": false,
        "localStroage": false,
        "window": false,
        "require": false,
        "import": false,
        "export": false
    },
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "VariableDeclarator": 1,
            "outerIIFEBody": 1,
            "MemberExpression": 1,
            "FunctionDeclaration": { "parameters": 1, "body": 1 },
            "FunctionExpression": { "parameters": 1, "body": 1 },
            "CallExpression": { "arguments": 1 },
            "ArrayExpression": 1,
            "ObjectExpression": 1,
            "ImportDeclaration": 1,
            "flatTernaryExpressions": false,
            "ignoreComments": false
        }],
        "no-new":"off"
    }
}